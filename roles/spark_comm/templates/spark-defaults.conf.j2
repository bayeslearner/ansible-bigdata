# Default system properties included when running spark-submit.
# This is useful for setting default environmental settings.

# Example:
# spark.master                     spark://master:7077
# spark.eventLog.enabled           true
# spark.eventLog.dir               hdfs://namenode:8021/directory
# spark.serializer                 org.apache.spark.serializer.KryoSerializer
# spark.driver.memory              5g
# spark.executor.extraJavaOptions  -XX:+PrintGCDetails -Dkey=value -Dnumbers="one two three"

{% if spark_comm_master is defined %}
spark.master            {{ spark_comm_master }}
{% endif %}

{% if spark_comm_logdir is defined %}
spark.eventLog.enabled  true
spark.eventLog.dir      {{ spark_comm_logdir }}
{% endif %}

# spark.serializer        org.apache.spark.serializer.KryoSerializer

{% if spark_comm_driver_extralib is defined %}
spark.driver.extraLibraryPath  {{ spark_comm_driver_extralib }}
{% endif %}

{% if spark_comm_executor_extralib is defined %}
spark.executor.extraLibraryPath  {{ spark_comm_executor_extralib }}
{% endif %}

{% if spark_comm_historyserver is defined %}
spark.yarn.historyServer.address {{ spark_comm_historyserver }}:18080
{% endif %}

{% if spark_comm_executor_memOverhead is defined %}
spark.executor.memoryOverhead {{ spark_comm_executor_memOverhead }}
{% endif %}

{% if spark_comm_exe_instances is defined %}
spark.executor.instances {{ spark_comm_exe_instances }}
{% endif %}

{% if spark_comm_metrics_properties_path is defined %}
spark.metrics.conf {{ spark_comm_metrics_properties_path }}
{% endif %}

{% if spark_comm_driver_extrajavaopts is defined %}
spark.driver.extraJavaOptions {{ spark_comm_driver_extrajavaopts }}
{% endif %}

{% if spark_comm_executor_extrajavaopts is defined %}
spark.executor.extraJavaOptions {{ spark_comm_executor_extrajavaopts }}
{% endif %}
